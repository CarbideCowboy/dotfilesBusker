[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

[module/avg-battery]
type = custom/script
exec = "count=$(acpi -b | wc -l); sum=$(acpi -b | egrep -o '[0-9]{1,3}%' | tr -d '%' | xargs -I% echo -n '+%'); echo "   //   Bat Avg": $(( sum / count ))%" 
interval = 5

[module/battery1]
type = internal/battery
