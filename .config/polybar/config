[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-disconnected =  WLan d/c
ramp-signal-0 = " "

[module/date]
type = internal/date
